@model Prolunteer.BusinessLogic.Implementation.Certification.Models.PendingCertificationViewModel

@{
    ViewData["Title"] = "PendingCertificationDetails";
}
@section Links{ 
    <link rel="stylesheet" href="~/css/PageSpecificCSS/Certification/pendingcertificationdetails.css" />
}
<div class="row">
    <div class="col-sm-2 align-self-center">
        <a asp-action="PendingCertifications" class="btn btn-info">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
            </svg>
            Back to List
        </a>
    </div>
    <div class="col-sm-8 text-center">
        <h1>Pending Certification</h1>
    </div>
    <div class="col-sm-2"></div>
</div>
<input type="hidden" value="@Model.UserId" id="userId"/>
<input type="hidden" value="@Model.CertificationId" id="certificationId"/>
<div>
    <hr />
    <div class="container">
        <div class="row no-gutters">
            <div class="col-sm-2 h5">
                Certification Name:
            </div>
            <div class="col-sm h5 ml-2 font-weight-light">
                @Model.CertificationName
            </div>
        </div>
        <div class="row no-gutters">
            <div class="col-sm-2 h5">
                User Name:
            </div>
            <div class="col-sm h5 ml-2 font-weight-light">
                @Model.UserName
            </div>
        </div>
        
    </div>
</div>

<hr />
<div>
    <div class="row">
        <div class="col-sm">
            <h3 class="col-sm">Document of proof</h3>
        </div>
        <div class="col-sm-6 text-right">
            <a id="pdfDownloadLink" download="Doavada_certificare_@(Model.CertificationName)_pentru_@(Model.UserName)" class="btn btn-primary" href="#">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-download" viewBox="0 0 16 16">
                    <path d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5z" />
                    <path d="M7.646 11.854a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293V1.5a.5.5 0 0 0-1 0v8.793L5.354 8.146a.5.5 0 1 0-.708.708l3 3z" />
                </svg>
                Download document
            </a>
            <a class="btn btn-success" asp-controller="Certification" asp-action="ApproveCertificationRequest" asp-route-certificationId="@Model.CertificationId" asp-route-userId="@Model.UserId">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-lg" viewBox="0 0 16 16">
                    <path d="M13.485 1.431a1.473 1.473 0 0 1 2.104 2.062l-7.84 9.801a1.473 1.473 0 0 1-2.12.04L.431 8.138a1.473 1.473 0 0 1 2.084-2.083l4.111 4.112 6.82-8.69a.486.486 0 0 1 .04-.045z" />
                </svg>
                Approve request
            </a>
        </div>
    </div>
    <div id="pdfDisplayArea">

    </div>
</div>
@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/2.6.347/pdf.min.js"></script>
    <script src="~/js/PageSpecificScripts/Certification/pendingcertificationdetails.js"></script>
}