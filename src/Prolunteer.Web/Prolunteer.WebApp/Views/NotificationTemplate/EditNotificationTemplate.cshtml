@model Prolunteer.BusinessLogic.Implementation.NotificationTemplate.Models.NotificationTemplateEditModel

@{
    ViewData["Title"] = "EditNotificationTemplate";
}

<div>
    <a asp-action="Index">Back to List</a>
</div>
<h1>EditNotificationTemplate</h1>

<h4>NotificationTemplateEditModel</h4>
<hr />
@if(Model == null)
{
    <div class="alert alert-info">Select a template to edit</div>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <form asp-action="EditNotificationTemplate">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Id" class="control-label"></label>
                    <input asp-for="Id" class="form-control" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NotificationName" class="control-label"></label>
                    <input asp-for="NotificationName" class="form-control" />
                    <span asp-validation-for="NotificationName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Template" class="control-label"></label>
                    <input asp-for="Template" class="form-control" />
                    <span asp-validation-for="Template" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
}


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
