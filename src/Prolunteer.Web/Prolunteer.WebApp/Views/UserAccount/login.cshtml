@model Prolunteer.BusinessLogic.Implementation.Account.Models.LoginModel
@{
    ViewData["Title"] = "Register";
}

<h4>Log In</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @if(Model.AreCredentialsInvalid)
        {
            <div><span style="color:red">Invalid credentials</span></div>
        }
        <form asp-action="Login" asp-controller="UserAccount">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EMail" class="control-label"></label>
                <input asp-for="EMail" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>