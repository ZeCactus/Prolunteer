@model Prolunteer.BusinessLogic.Implementation.VolunteerPosition.Models.VolunteerPositionDetailsModel

@{
    ViewData["Title"] = "VolunteerPositionDetails";
}

<h1>Volunteer position details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            Enrolled Volunteers
        </dt>
        <dd class="col-sm-10">
            @($"{Model.Volunteers.Count}/{Model.MaximumNrOfVolunteers}")
        </dd>
    </dl>
</div>
<div>
    <a asp-controller="Event" asp-action="EventDetails" asp-route-id="@Model.EventId">Back to Event</a>
</div>
<hr />
<h1>Enrolled volunteers:</h1>
<div class="container">
    @if (Model.Volunteers.Count != 0)
    {
        <div class="row">
            <div class="col-sm">Name</div>
            <div class="col-sm-1"></div>
        </div>
        @foreach (var item in Model.Volunteers)
        {
            <hr />
            <div class="row">
                <div class="col-sm">@($"{item.FirstName} {item.LastName}")</div>
                <div class="col-sm-1">
                    <button class="btn btn-danger RemoveVolunteerButton" data-id="@item.Id">Remove</button>
                </div>
            </div>
        }
    }
    else
    {
        <div class="d-sm-flex justify-content-center">
            <div class="alert-info border rounded border-info w-75 h-25 text-center">
                <h1>There are no volunteers registered for this event</h1>
            </div>
        </div>
    }
</div>
