@model Prolunteer.BusinessLogic.Implementation.VolunteerPosition.Models.VolunteerPositionCreateModel

@{
    ViewData["Title"] = "Add Volunteer Position";
}

<h1>AddVolunteerPosition</h1>

<h4>VolunteerPositionCreateModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddVolunteerPosition">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EventId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaximumNrOfVolunteers" class="control-label"></label>
                <input asp-for="MaximumNrOfVolunteers" class="form-control" />
                <span asp-validation-for="MaximumNrOfVolunteers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RequiredCertifications" class="control-label"></label>
                <select asp-for="RequiredCertifications" class="form-control"></select>
                <span asp-validation-for="RequiredCertifications" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Event" asp-action="EventDetails" asp-route-id="@Model.EventId">Back to List</a>
</div>

@section Links{
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="~/js/PageSpecificScripts/VolunteerPosition/addvolunteerposition.js"></script>
}
