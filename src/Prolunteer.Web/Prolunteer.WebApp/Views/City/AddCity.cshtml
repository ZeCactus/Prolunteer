@model Prolunteer.BusinessLogic.Implementation.City.Models.CityCreateModel

@{
    ViewData["Title"] = "AddCity";
}

<h1>AddCity</h1>

<h4>CityCreateModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddCity">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CountyId" class="control-label"></label>
                <select asp-for="CountyId" class="form-control" placeholder="Select a county">
                    <option disabled selected>Alege un judet</option>
                </select>
                <span asp-validation-for="CountyId" class="text-danger"></span>
            </div>
